{
  "expo": {
    "name": "ChooseGOD",
    "slug": "ChooseGOD",
    "scheme": "choosegod",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F0F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.choosegod.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F0F0F"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.choosegod.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      "expo-font",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow ChooseGOD to use the microphone for voice input.",
          "speechRecognitionPermission": "Allow ChooseGOD to use speech recognition for hands-free questions and prayers."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "50d7d10e-37a3-49be-90cb-1f5f96ea070c"
      }
    }
  }
}
